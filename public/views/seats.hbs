<!DOCTYPE html>
<html lang="uz">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Avtobus Oâ€˜rindiqlari</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.7.2/css/all.css">
    <style>
        :root {
            --primary: #5A67D8;
            --danger: #E53E3E;
            --success: #38A169;
            --bg-gradient: #ffffff;
            --card-bg: #ffffff;
            --text-light: #ffffff;
            --text-dark: #2D3748;
            --shadow-lg: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: var(--bg-gradient);
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
            padding: 20px;
        }

        .container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
            gap: 20px;
            width: 100%;
            max-width: 1000px;
            margin-bottom: 30px;
        }

        .grid-item {
            position: relative;
            background: var(--card-bg);
            border-radius: 16px;
            box-shadow: var(--shadow-lg);
            padding: 16px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
        }

        .grid-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
        }

        .seat-number {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
            margin-bottom: 12px;
            color: var(--text-light);
            background: var(--primary);
        }

        .grid-item[data-status="busy"] {
            background: rgba(229, 62, 62, 0.1);
            color: var(--danger);
            pointer-events: none;
        }

        .grid-item[data-status="busy"] .badge {
            background: var(--danger);
        }

        /* Modal for form */
        .modal-overlay,
        .notif-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 999;
        }

        .modal,
        .notif {
            background: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: var(--shadow-lg);
            max-width: 400px;
            width: 90%;
            position: relative;
            animation: fadeIn 0.3s ease;
            text-align: left;
        }

        .notif {
            text-align: center;
        }

        .modal h2,
        .notif h2 {
            margin-top: 0;
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .modal form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .modal input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
        }

        .modal .actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .modal .actions button {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .modal .cancel-btn {
            background: #e2e8f0;
            color: #2d3748;
        }

        .modal .save-btn {
            background: var(--primary);
            color: white;
            position: relative;
        }

        .modal .spinner {
            width: 20px;
            height: 20px;
            border: 3px solid #fff;
            border-top: 3px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            display: none;
            margin: auto;
        }

        .modal .save-btn.loading .text {
            display: none;
        }

        .modal .save-btn.loading .spinner {
            display: inline-block;
        }

        /* Notification popup */
        .notif .icon i {
            font-size: 3rem;
            margin-bottom: 15px;
        }

        .notif .icon i.success {
            color: var(--success);
        }

        .notif .icon i.error {
            color: var(--danger);
        }

        .notif .message {
            margin-bottom: 20px;
            font-size: 1.1rem;
        }

        .notif .close-btn {
            padding: 8px 16px;
            background: #e2e8f0;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.95);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .back-button {
            align-self: flex-start;
            margin-bottom: 20px;
            padding: 10px 16px;
            background-color: var(--primary);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            box-shadow: var(--shadow-lg);
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #434190;
        }
    </style>
</head>

<body>
    <a href="javascript:history.back()" class="back-button">
        <i class="fa fa-arrow-left"></i> Orqaga
    </a>
    <div class="container">
        {{#each trip.seats}}
        <div class="grid-item" data-status="{{status}}" data-id="{{_id}}">
            <div class="seat-number">{{seatNumber}}</div>
            <div class="badge">
                {{#if (eq status "empty")}}Bo'sh{{else}}{{#if (eq status "busy")}}Band{{else}}{{status}}{{/if}}{{/if}}
            </div>
        </div>
        {{/each}}
    </div>



    <!-- Booking Modal -->
    <div class="modal-overlay" id="modalOverlay">
        <div class="modal" id="seatModal">
            <h2>Yo'lovchi ma'lumotlari</h2>
            <form id="modalForm">
                <label for="passenger">To'liq ism</label>
                <input type="text" name="passenger" id="passenger" placeholder="Masalan: Davronov Davron Davronovich"
                    required />
                <label for="birthday">Tug'ilgan sana</label>
                <input type="date" name="birthday" id="birthday" required />
                <label for="passport">Pasport raqam</label>
                <input type="text" name="passport" id="passport" placeholder="AA1234567" required />
                <label for="phoneNumber">Telefon raqam</label>
                <input type="tel" name="phoneNumber" id="phoneNumber" placeholder="+998991234567" required />
                <div class="actions">
                    <button type="button" class="cancel-btn" id="cancelBtn">Bekor qilish</button>
                    <button type="submit" class="save-btn" id="saveBtn">
                        <span class="text">Saqlash</span>
                        <span class="spinner"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Notification Popup -->
    <div class="notif-overlay" id="notifOverlay">
        <div class="notif" id="notifPopup">
            <div class="icon" id="notifIcon"><i class="fa fa-check-circle success"></i></div>
            <div class="message" id="notifMessage">Message here</div>
            <button class="close-btn" id="notifCloseBtn">Yopish</button>
        </div>
    </div>

    <script>
        // Helper: show notification
        function showNotification(type, text) {
            const overlay = document.getElementById('notifOverlay');
            const iconEl = document.getElementById('notifIcon');
            const msgEl = document.getElementById('notifMessage');

            iconEl.innerHTML = type === 'success'
                ? '<i class="fa fa-check-circle success"></i>'
                : '<i class="fa fa-times-circle error"></i>';
            msgEl.textContent = text;
            overlay.style.display = 'flex';
        }

        document.getElementById('notifCloseBtn').addEventListener('click', () => {
            document.getElementById('notifOverlay').style.display = 'none';
            location.reload()
        });

        // Passport formatting
        function formatPassportNumber(value) {
            let cleaned = value.replace(/[^a-zA-Z0-9]/g, '');
            let letters = cleaned.slice(0, 2).replace(/[^a-zA-Z]/g, '').toUpperCase();
            let digits = cleaned.slice(2).replace(/\D/g, '').slice(0, 7);
            return letters + digits;
        }

        document.getElementById('passport').addEventListener('input', e => {
            e.target.value = formatPassportNumber(e.target.value);
        });

        // Date limits
        const birthInput = document.getElementById('birthday');
        const today = new Date();
        birthInput.max = today.toISOString().split('T')[0];
        birthInput.min = new Date(today.getFullYear() - 100, today.getMonth(), today.getDate()).toISOString().split('T')[0];

        // Modal logic
        const modalOverlay = document.getElementById('modalOverlay');
        const modalForm = document.getElementById('modalForm');
        const saveBtn = document.getElementById('saveBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        let currentSeatId = null;

        document.querySelectorAll('.grid-item[data-status="empty"]').forEach(item => {
            item.addEventListener('click', () => {
                currentSeatId = item.dataset.id;
                modalOverlay.style.display = 'flex';
            });
        });

        cancelBtn.addEventListener('click', () => {
            modalOverlay.style.display = 'none';
            modalForm.reset();
        });

        modalForm.addEventListener('submit', e => {
            e.preventDefault();
            saveBtn.classList.add('loading');

            const data = {
                passenger: modalForm.passenger.value,
                birthday: modalForm.birthday.value,
                passport: modalForm.passport.value,
                phoneNumber: modalForm.phoneNumber.value
            };

            fetch(`http://localhost:7000/seatbooked/${currentSeatId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
                .then(res => res.json().then(resp => {
                    modalOverlay.style.display = 'none';
                    modalForm.reset();
                    if (res.ok) {
                        showNotification('success', resp.message || 'Muvaffaqiyatli saqlandi!');
                    } else {
                        showNotification('error', resp.error || 'Xatolik yuz berdi!');
                    }
                }))
                .catch(() => {
                    showNotification('error', 'Tarmoqda xatolik!');
                })
                .finally(() => saveBtn.classList.remove('loading'));
        });
    </script>
</body>

</html>